%html
  %head
    %title League
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    %h1 League Administration

    - if flash[:error]
      #flash_error 
        = flash[:error]
    - if flash[:success]
      #flash_success 
        = flash[:success]

    %ul
      %li= link_to "Benutzer", users_path
      %li= link_to "Teams", teams_path
      %li= link_to "Ligen", ladders_path
    %hr

    = yield

